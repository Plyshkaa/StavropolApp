<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="end">

        <!-- Изображение человека -->
        <ImageView
            android:id="@+id/person_detail_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!-- Имя человека -->
        <TextView
            android:id="@+id/person_detail_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <!-- Описание человека, с возможностью переключения -->
        <TextView
            android:id="@+id/person_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:lineSpacingExtra="4dp" />

        <!-- Кнопка для переключения описания -->
        <Button
            android:id="@+id/button_toggle_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="Показать больше"
            android:textColor="@android:color/white"
            android:backgroundTint="#FF6200EE"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/custom_button_background" />

    </LinearLayout>
</ScrollView>
