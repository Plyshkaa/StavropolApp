<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Изображение места -->
        <ImageView
            android:id="@+id/placeImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop" />

        <!-- Описание места -->
        <TextView
            android:id="@+id/descriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:paddingTop="8dp"
            android:textSize="16sp" />

        <!-- Карточка с информацией -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="@color/lightGray">

                <!-- Заголовок карточки -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Информация о месте"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="16dp" />

                <!-- GridLayout для информации -->
                <androidx.gridlayout.widget.GridLayout
                    android:id="@+id/info_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    app:columnCount="2"
                    app:rowCount="3">

                    <!-- Иконка для расстояния -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_distance"
                        android:contentDescription="Иконка расстояния"
                        app:layout_column="0"
                        app:layout_row="0" />

                    <!-- Текст для расстояния -->
                    <TextView
                        android:id="@+id/distanceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Расстояние до объекта"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@android:color/black"
                        app:layout_column="1"
                        app:layout_row="0" />

                    <!-- Иконка для координат -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/coordinates"
                        android:contentDescription="Иконка координат"
                        android:layout_marginTop="16dp"
                        app:layout_column="0"
                        app:layout_row="1" />

                    <!-- Текст для координат -->
                    <TextView
                        android:id="@+id/coordinatesTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Координаты"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="16dp"
                        app:layout_column="1"
                        app:layout_row="1" />

                    <!-- Иконка для времени пребывания -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_time"
                        android:contentDescription="Иконка времени"
                        android:layout_marginTop="16dp"
                        app:layout_column="0"
                        app:layout_row="2" />

                    <!-- Текст для времени пребывания -->
                    <TextView
                        android:id="@+id/timeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Примерное время пребывания"
                        android:textSize="16sp"
                        android:paddingStart="8dp"
                        android:textColor="@android:color/black"
                        android:layout_marginTop="16dp"
                        app:layout_column="1"
                        app:layout_row="2" />

                </androidx.gridlayout.widget.GridLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
