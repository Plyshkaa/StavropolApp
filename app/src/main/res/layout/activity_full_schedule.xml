<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <TextView
        android:id="@+id/full_schedule_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Режим работы"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/monday_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Понедельник: 00:00 - 00:00"
        app:layout_constraintTop_toBottomOf="@id/full_schedule_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tuesday_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вторник: 00:00 - 00:00"
        app:layout_constraintTop_toBottomOf="@id/monday_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/wednesday_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Среда: 00:00 - 00:00"
        app:layout_constraintTop_toBottomOf="@id/tuesday_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/thursday_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Четверг: 00:00 - 00:00"
        app:layout_constraintTop_toBottomOf="@id/wednesday_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/friday_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пятница: 00:00 - 00:00"
        app:layout_constraintTop_toBottomOf="@id/thursday_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/saturday_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Суббота: 00:00 - 00:00"
        app:layout_constraintTop_toBottomOf="@id/friday_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/sunday_hours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Воскресенье: 00:00 - 00:00"
        app:layout_constraintTop_toBottomOf="@id/saturday_hours"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
